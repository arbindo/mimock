#!/usr/bin/env bash

while getopts ":b:h" opt; do
	case $opt in
	b)
		echo -e "\n:: Option selected : Run with backend ::"
		echo -e "\n== ğŸš€ Spring boot app will run in the background after DB initialization ==\n"
		should_start_api=true
		;;
	h)
		echo "Usage: setup-dev-workspace.sh [-b] true"
		echo "  -b: Start spring-boot backend server"
		exit 0
		;;
	\?)
		echo "Invalid option: -$OPTARG" >&2
		exit 1
		;;
	esac
done

should_proceed=true

check_program() {
	if ! command -v "$1" >/dev/null 2>&1; then
		echo "âŒ '$1'"
		should_proceed=false
	else
		echo "âœ… '$1'"
	fi
}

echo "Checking program status"
echo "========================"
check_program "git"
check_program "yarn"
check_program "java"
check_program "docker"

if ! $should_proceed; then
	echo "â‰ï¸ Required programs are missing or not installed"
	echo "ğŸ”´ Please install the missing programs"
	exit 1
fi

echo -e "\n"
echo "Setting up Dev workspace"
echo "========================"
echo -e "\n"
echo -e ":: Setting up git hooks ::\n"

if [ -f ~/.huskyrc ]; then
	cat ~/.huskyrc | grep "exec < /dev/tty" >/dev/null
	if [ $? -eq 0 ]; then
		echo -e "âœ… Husky is already configured\n"
	else
		echo -e "ğŸ• Configuring husky\n"
		echo "exec < /dev/tty" >>~/.huskyrc
	fi
else
	echo -e "ğŸ• Configuring husky\n"
	echo "exec < /dev/tty" >>~/.huskyrc
fi

yarn
yarn prepare
cd .husky && chmod +x * && cd ..

echo -e "\n"
echo -e ":: Installing UI dependencies ::\n"
cd mimock-ui && yarn && cd ..

echo -e "\n"
echo -e ":: Installing backend dependencies ::\n"
cd mimock-backend && ./mvnw -ntp clean install -DskipTests=true && cd ..

echo -e "\n"
echo -e ":: Starting dev database ::\n"
mimock_db=$(docker ps -a --filter name=mimock-db --format "{{.Names}}")

if [ -z "$mimock_db" ]; then
	echo "ğŸ”µ Starting database"
	docker build -t mimock-pg-database . -f Dockerfile.pg && docker run --name mimock-db -p 5427:5432 -d mimock-pg-database
else
	db_status=$(docker container inspect -f '{{.State.Running}}' $mimock_db)
	if [ "$db_status" == "false" ]; then
		echo "ğŸ‹ Database is not running"
		echo "ğŸ³ Re-starting database"
		docker start $mimock_db >/dev/null
	else
		echo "ğŸ³ Mimock database is already running"
	fi
fi

if $should_start_api; then
	echo -e "\n"
	echo -e ":: Starting backend server ::\n"
	cd mimock-backend && nohup ./mvnw spring-boot:run -DskipTests=true -Dapp.profiles=dev >/dev/null 2>&1 &
	pid=$(echo $!)
	cd ..
	echo -e "ğŸ”µ Backend server is running\n"
	echo -e "> To stop the server, run 'kill -9 $pid'\n"
else
	echo "âš ï¸ Spring boot app will not run in the background"
	echo "ğŸ›¸ You can run it manually with 'cd ./micmock-backend && ./mvnw spring-boot:run -DskipTests=true -Dapp.profiles=dev'"
	echo "ğŸ›¸ You can also run this script with '-b' option to start the app in the background"
fi

echo -e "\n"
echo "========================"
echo "Dev workspace setup completed!"
echo -e "\n"
